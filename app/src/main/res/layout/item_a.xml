<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/shape_one">

    <TextView
        android:id="@+id/tv_qno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fraunces"
        android:text="Q.1"
        android:textColor="#131010"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fraunces"
        android:text="locked"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_qno"
        app:layout_constraintStart_toStartOf="@+id/tv_qno"
        app:layout_constraintTop_toBottomOf="@+id/tv_qno" />

</androidx.constraintlayout.widget.ConstraintLayout>